<div class="container">

  <h1 class="mb-4">My Profile</h1>

  <div class="mb-3">
    <%= link_to :back, class: "btn btn-outline-secondary" do %>
      <i class="fas fa-arrow-circle-left"></i> Back
    <% end %>
    <%= link_to edit_user_registration_path, class: "mx-3 btn btn-info" do %>
      <i class="fas fa-edit"></i> Edit
    <% end %>
  </div>
  <div class="row">
  <div class="col-12 col-md-12">
    <ul class="list-group user">
      <li class="list-group-item">
        <b>Name : </b><span><%= @current_user.name %></span>
      </li>
      <li class="list-group-item">
        <b>Email : </b><span><%= @current_user.email %></span>
      </li>
      <li class="list-group-item">
        <b>Currect Answers : </b><span><%= @currect_answer %></span>
      </li>
      <li class="list-group-item">
        <b>Wrong Answers : </b><span><%= @wrong_answer %></span>
      </li>
      <li class="list-group-item">
        <b>Total Score : </b><span><%= @score %></span>
      </li>
    </ul>
  </div>
</div>
