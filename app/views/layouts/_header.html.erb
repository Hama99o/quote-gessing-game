<header class="navbar navbar-expand-lg navbar-light bg-light">
  <%= link_to games_path, class: 'nav-item nav-link active navbar-brand responsive-text' do %>
    <i class="fas fa-gamepad"></i> Play
  <% end %>
  <% if user_signed_in? %>
    <%= link_to destroy_user_session_path, method: :delete, class: 'nav-item nav-link active navbar-brand responsive-text' do  %>
      <i class="fas fa-sign-out-alt"></i> Sign Out
    <% end %>
  <% else %>
    <%= link_to new_user_session_path, class: 'nav-item nav-link active navbar-brand responsive-text' do %>
      <i class="fas fa-sign-in-alt"></i> Sign In
    <% end %>
    <%= link_to new_user_registration_path, class: 'nav-item nav-link active navbar-brand responsive-text' do %>
      <i class="fas fa-user-plus"></i> Sign Up
    <% end %>
  <% end %>
  <%= link_to profile_path, class: 'nav-item nav-link active navbar-brand responsive-text' do %>
    <i class="fas fa-user"></i> Profile
  <% end %>
</header>
